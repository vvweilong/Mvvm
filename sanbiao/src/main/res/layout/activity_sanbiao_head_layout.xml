<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingTop="19dp"
        android:paddingBottom="19dp"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/title_tv"
            android:text="精选标"
            android:textSize="18sp"
            android:textColor="#1F2136"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginStart="19dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/describe_tv"
            android:text="转让专区是指原债权人（转让人）将其基于《借款协议》或其他融资文件而享有的债权转让给第三方（受让人）的行为。"
            android:textSize="12sp"
            android:textColor="#8C8EA0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/title_tv"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/title_tv"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginTop="5dp"/>

    <ImageView
            android:src="@android:drawable/arrow_up_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"
            app:layout_constraintTop_toTopOf="@+id/describe_tv"
            app:layout_constraintBottom_toBottomOf="@+id/describe_tv"/>
</android.support.constraint.ConstraintLayout>