<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:textColor="#1F2136"
            android:textSize="14sp"
            tools:text="个人借款标LSBD201810110001"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/sanbiao_item_flag_bg"
            tools:text="AA"
            android:id="@+id/flag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/title_tv"
            app:layout_constraintStart_toEndOf="@+id/title_tv"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_tv"/>

    <View
            android:background="@color/colorPrimary"
            android:layout_width="48dp"
            android:layout_height="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/title_tv"/>


    <TextView
            tools:text="10.3"
            android:textSize="30sp"
            android:id="@+id/radio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/title_tv"
            app:layout_constraintStart_toStartOf="@+id/title_tv"
            />

    <TextView
            tools:text="%"
            android:textSize="23sp"
            android:id="@+id/radio_dimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/radio_tv"
            app:layout_constraintStart_toEndOf="@+id/radio_tv"
            />

    <TextView
            tools:text="借款年化利率"
            android:id="@+id/radio_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/radio_tv"
            app:layout_constraintStart_toStartOf="@+id/radio_tv"
            android:layout_marginTop="2dp"/>

    <TextView
            tools:text="18个月"
            android:id="@+id/perird_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/radio_tv"/>


    <TextView
            tools:text="借款合同期限"
            android:id="@+id/perird_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/perird_tv"
            app:layout_constraintTop_toTopOf="@+id/radio_describe"/>

    <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="借款合同期限"
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sanbiao_item_btn_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/perird_tv"/>


    <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_describe"/>

</android.support.constraint.ConstraintLayout>